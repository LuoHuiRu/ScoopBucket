{
    "version": "21.07",
    "description": "A multi-format file archiver with high compression ratios",
    "homepage": "https://www.7-zip.org/",
    "license": {
        "identifier": "Freeware,LGPL-2.0-only,BSD-3-Clause",
        "url": "https://www.7-zip.org/license.txt"
    },
    "notes": [
        "Add 7-Zip as a context menu option by running: \"$dir\\install-context.reg\""
    ],
    "architecture": {
        "64bit": {
            "url": "https://7-zip.org/a/7z2107-x64.msi",
            "hash": "5447c9ac39c48f1bc7c88359b0520396a8c9707b307c107236a93a68e6fd3eb6"
        }
    },
    "pre_install": [
        "$7zip_root = $dir",
        "Copy-Item -Recurse -Force -Path \"$bucketsdir\\$bucket\\scripts\\$app\\reg\\*\" -Destination \"$dir\"",
        "'install-context.reg', 'uninstall-context.reg' | ForEach-Object {",
        "    $content = Get-Content \"$dir\\$_\"",
        "    $content = $content.Replace('$7zip_root', $7zip_root)",
        "    if ($global) {",
        "       $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    Set-Content \"$dir\\$_\" $content -Encoding Ascii",
        "}"
    ],
    "post_install": [
        "Copy-Item -Path \"$bucketsdir\\$bucket\\scripts\\$app\\7z_office.dll\" -Destination \"$persist_dir\\7z.dll\" -Force"
    ],
    "extract_dir": "Files\\7-Zip",
    "bin": "7z.exe",
    "shortcuts": [["7zFM.exe", "7-Zip"]],
    "persist": ["Codecs", "Formats", "7z.dll"],
    "checkver": {
        "url": "https://www.7-zip.org/download.html",
        "regex": "Download 7-Zip ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://7-zip.org/a/7z$cleanVersion-x64.msi"
            },
            "32bit": {
                "url": "https://7-zip.org/a/7z$cleanVersion.msi"
            }
        }
    }
}
